<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewHelpWantedOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization: "
                    android:fontFamily="@font/vertigoflfbold"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewHelpWantedOrgFromPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewHelpWantedOrg"
                    android:fontFamily="@font/vertigoflfbold"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textViewHelpWantedPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewHelpWantedOrg"
                    android:text="Position: "
                    android:fontFamily="@font/vertigoflfbold"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewHelpWantedPositionFromPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewHelpWantedPosition"
                    android:fontFamily="@font/vertigoflfbold"
                    android:layout_below="@+id/textViewHelpWantedOrg"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewHelpWantedLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewHelpWantedPosition"
                    android:text="Location: "
                    android:fontFamily="@font/vertigoflfbold"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewHelpWantedLocationFromPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewHelpWantedLocation"
                    android:fontFamily="@font/vertigoflfbold"
                    android:layout_below="@+id/textViewHelpWantedPositionFromPoster"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewHelpWantedCompensation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewHelpWantedLocation"
                    android:text="Compensation: "
                    android:fontFamily="@font/vertigoflfbold"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewHelpWantedCompensationFromPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewHelpWantedCompensation"
                    android:fontFamily="@font/vertigoflfbold"
                    android:layout_below="@+id/textViewHelpWantedLocationFromPoster"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewHelpWantedCompensationUnitFromPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewHelpWantedCompensationFromPoster"
                    android:fontFamily="@font/vertigoflfbold"
                    android:layout_below="@+id/textViewHelpWantedLocationFromPoster"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonHelpWantedMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="More Info"
                    android:backgroundTint="#FFA617"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/vertigoflfbold"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>