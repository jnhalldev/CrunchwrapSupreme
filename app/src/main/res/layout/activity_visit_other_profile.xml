<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitOtherProfileActivity">

    <Button
        android:id="@+id/buttonVisitOtherProfileBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="8dp"
        android:text="Back"
        android:backgroundTint="#FFA617"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonVisitOtherUserPicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonVisitOtherProfileMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Message"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        android:backgroundTint="#FFA617"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonVisitOtherUserPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonVisitOtherUserPicture"
        android:background="@drawable/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVisitOtherProfileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Last"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonVisitOtherUserPicture" />

    <TextView
        android:id="@+id/textViewVisitOtherProfileUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVisitOtherProfileUserName" />

    <TextView
        android:id="@+id/textViewVisitOtherProfileUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVisitOtherProfileUserEmail" />

    <Button
        android:id="@+id/buttonVisitOtherProfileViewResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Resume"
        android:fontFamily="@font/vertigoflfbold"
        android:textStyle="bold"
        android:textSize="18dp"
        android:backgroundTint="#FFA617"
        app:layout_constraintBottom_toBottomOf="@+id/textViewVisitOtherProfileUserPhone"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonVisitOtherUserPicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVisitOtherProfileBack" />

    <LinearLayout
        android:id="@+id/VisitOtherlinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVisitOtherProfileUserPhone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio:"
            android:textSize="32dp"
            android:fontFamily="@font/vertigoflfbold"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollViewBioScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="false">

            <TextView
                android:id="@+id/textViewVisitOtherProfileBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:fontFamily="@font/vertigoflfbold"
                android:textStyle="bold" />
        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>